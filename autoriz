using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace k
{
    internal class Autorizacja
    {
        static public string Role, User;

        static public void Avtoricaja1(string login, string password)
        {
            try
            {
                DBconnections.msCommand.CommandText = @"SELECT name_role from sp_role, account WHERE Login = '" + login + "' and Password = '" + password + "' and account.id_role=sp_role.id_role ";
                Object result = DBconnections.msCommand.ExecuteScalar();
                if (result != null)
                {
                    Role = result.ToString();
                    User = login;
                }
                else
                {
                    Role = null;
                }
            }
            catch
            {
                Role = User = null;
                MessageBox.Show("ошибка авторизации");

            }
        }


    }
}
